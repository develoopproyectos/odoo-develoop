<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="assets_backend" name="custom_balance_sheet_report" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/custom_balance_sheet_report/static/src/css/balance_situacional_report.css" />
            <script
                type="text/javascript"
                src="/custom_balance_sheet_report/static/src/js/balance_situacional_widget.js"
            />
        </xpath>
    </template>
    <record model="ir.ui.view" id="balance_situacional_instance_result_view_form">
        <field name="name">balance.situacional.instance.result.view.form</field>
        <field name="model">mis.report.instance</field>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <form string="MIS Report Result" edit="false" create="false" delete="false">
                <group colspan="4">
                    <field name="id" widget="balance_situacional_widget" nolabel="1" />
                </group>
            </form>
        </field>
    </record>
</odoo>
