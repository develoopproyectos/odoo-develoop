<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_project_sprint_management" model="ir.ui.view">
            <field name="name">project.project.form.updateTemplate</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="backup" attrs="{'readonly':[('active','=',False)]}"/>
                    <field name="responsable_tecnico" attrs="{'readonly':[('active','=',False)]}"/>
                </field>

                <xpath expr="//form[1]/sheet[1]/div[@name='button_box']/button[@icon='fa-tasks']" position="before">
                    <button class="oe_stat_button" icon="fa-calendar-times-o" type="object" name="sprint_action">
                        <field widget="statinfo" name="sprint_count" string="Sprints"/>
                    </button>
                </xpath>

            </field>
        </record>
    </data>
</odoo>