<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_task_search_form_extended_custom" model="ir.ui.view">
            <field name="name">project.task.search.form.extended.custom</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"></field>
            <field name="mode">extension</field>
            <field name="type">search</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='unassigned']" position="after">
                    <separator/>
                    <filter string="No planificado" name="x_is_planned" domain="[('x_is_planned', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <record id="task_kanban_update" model="ir.ui.view">
            <field name="name">task_kanban_update</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace" >
                    <field name="name" class="o_task_name" placeholder="TÃ­tulo de tarea..." default_focus="1" modifiers="{&quot;required&quot;: true}"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="planning_custom" string="Planificacion" >
                        <group>
                            <field name="x_planning_slot" nolabel="1" />
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="replace" >
                    <field name="x_is_planning_delay" invisible="1" />
                    <field name="date_deadline" attrs="{'invisible': [('x_is_planning_delay','=',True)]}" class="font-weight-bold text-danger" />
                    <field name="date_deadline" attrs="{'invisible': [('x_is_planning_delay','=',False)]}" />
                </xpath>
            </field>
        </record>

        <record id="view_task_kanban_custom" model="ir.ui.view">
            <field name="name">view_task_kanban_custom</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="after">
                    <field name="x_planning_slot_str" />
                </xpath>
                <!-- <xpath expr="//div[@class='o_kanban_record_body']/div[1]" position="after">
                    <div style="font-size:10px;">
                      <t t-raw="record.x_planning_slot_str.raw_value"/>
                    </div>
                </xpath> -->
                <!-- <field name="x_planning_slot_str" style="font-size:10px;"/> -->
                <!-- <field name="x_planning_slot_str" type="html"/> -->
            </field>
        </record>

        <!-- ACTUALIZA LOS DOMINIOS DE LOS REGISTROS EXISTENTES -->
        <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
                <field name="domain">[('project_id', '=', active_id)]</field>
        </record>
        <record id="project.action_view_task" model="ir.actions.act_window">
                <field name="domain">[('project_id', '=', active_id)]</field>
        </record>
        <record id="view_search_inherit" model="ir.ui.view">
            <field name="name">web.SearchView.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form_extended"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//search/field[@name='name']" position="before">
                        <field name="id"/>
                    </xpath>
                </data>            
            </field>
        </record>      

    </data>

</odoo>
