<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="planning_slot_view_form_custom" model="ir.ui.view">
        <field name="name">planning.slot.form.custom</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allocated_hours']" position="after">
                <field name="x_expiration_date" string="Fecha lÃ­mite" />
            </xpath>
            <xpath expr="//field[@name='role_id']" position="before">
                <field name="resource_ids" string="Recursos" widget="many2many_tags" attrs="{'readonly': [('id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="planning_view_gantt_custom" model="ir.ui.view">
        <field name="name">planning.slot.gantt</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_gantt"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allocated_hours']" position="after">
                <field name="x_expiration_date" />
                <field name="x_kanban_state" />
                <field name="x_stage_id" />
            </xpath>
        </field>
    </record>  


</odoo>